{
  "name": "@nanocollective/get-md",
  "version": "1.0.3",
  "description": "Fast HTML to Markdown converter optimized for LLM consumption",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "getmd": "./bin/get-md.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "bin",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "tsc && chmod +x bin/get-md.js",
    "dev": "tsc --watch",
    "test:all": "./scripts/test.sh",
    "test:ava": "ava",
    "test:ava:coverage": "c8 ava",
    "test:format": "biome check .",
    "test:types": "tsc --noEmit",
    "test:lint": "biome lint .",
    "test:lint:fix": "biome check --write .",
    "test:knip": "knip",
    "format": "biome format --write .",
    "prepublishOnly": "pnpm run build && pnpm run test:all"
  },
  "keywords": [
    "html",
    "markdown",
    "json",
    "converter",
    "parser",
    "llm",
    "readability",
    "turndown",
    "cheerio",
    "fast",
    "local"
  ],
  "dependencies": {
    "@mozilla/readability": "^0.6.0",
    "ajv": "^8.17.1",
    "cheerio": "^1.1.2",
    "commander": "^14.0.2",
    "happy-dom-without-node": "^14.12.3",
    "turndown": "^7.2.2",
    "turndown-plugin-gfm": "^1.0.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nano-collective/get-md.git"
  },
  "license": "MIT",
  "devDependencies": {
    "@ava/typescript": "^6.0.0",
    "@biomejs/biome": "^2.3.9",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^24.9.1",
    "@types/turndown": "^5.0.6",
    "ava": "^6.4.1",
    "c8": "^10.1.3",
    "knip": "^5.66.3",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  },
  "ava": {
    "extensions": {
      "ts": "module"
    },
    "nodeArguments": [
      "--import=tsx",
      "--no-warnings"
    ],
    "files": [
      "src/**/*.spec.ts",
      "!src/**/*-helpers.ts",
      "!src/**/test-helpers.ts"
    ],
    "workerThreads": false,
    "serial": true,
    "environmentVariables": {
      "NODE_ENV": "test"
    }
  }
}
